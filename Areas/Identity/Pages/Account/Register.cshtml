@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro de nuevos usuarios";
}

<div class="row justify-content-center">
    <h1>@ViewData["Title"]</h1>

    <br />
</div>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crear una nueva cuenta.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*/Nombre*@
            <div class="form-floating">
                <input asp-for="Input.Nombre" class="form-control" autocomplete="nombre" aria-required="true" />
                <label asp-for="Input.Nombre"></label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            @*/Apellido*@
            <div class="form-floating">
                <input asp-for="Input.Apellido" class="form-control" autocomplete="apellido" aria-required="true" />
                <label asp-for="Input.Apellido"></label>
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>
            @*/Email*@
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            @*Contraseña*@
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            @*Confirmar contraseña*@
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrarse</button>
        </form>
    </div>


</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
